{
    "name": "pruebas-automatizadas-ghost",
    "version": "1.0.0",
    "description": "Pruebas automatizadas a la plataforma GHOST",
    "workspaces": [
        "tests/e2e/ghost-cypress",
        "tests/e2e/ghost-kraken",
        "tests/e2e/ghost-playwright",
        "tests/e2e/ghost-puppeteer"
    ],
    "scripts": {
        "format": "npm run format --workspace=* --if-present",
        "dcompose": "docker compose up -d --build",
        "dstop": "docker compose stop",
        "dprune": "docker volume prune -f",
        "drm": "docker compose rm -fsv && npm run dprune",
        "pretest:cypress": "npm run dcompose",
        "test:cypress": "npm test --workspace=tests/e2e/ghost-cypress",
        "pretest:kraken": "npm run dcompose",
        "test:kraken": "npm test --workspace=tests/e2e/ghost-kraken",
        "pretest:playwright": "npm run dcompose",
        "test:playwright": "npm test --workspace=tests/e2e/ghost-playwright",
        "pretest:puppeteer": "npm run dcompose",
        "test:puppeteer": "npm test --workspace=tests/e2e/ghost-puppeteer",
        "pretest:e2e": "npm run dcompose",
        "test:e2e": "npm test --workspace=tests/e2e/* --if-present",
        "pretest": "npm run dcompose",
        "test": "npm test --workspace=tests/**/* --if-present"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/juanmanuelgg/pruebas-e2e-ghost.git"
    },
    "keywords": [
        "Kraken",
        "Cypress",
        "Puppeteer",
        "Playwright",
        "E2E Testing",
        "Ghost"
    ],
    "author": "Juan Manuel González Garzón",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/juanmanuelgg/pruebas-e2e-ghost/issues"
    },
    "homepage": "https://github.com/juanmanuelgg/pruebas-e2e-ghost#readme",
    "devDependencies": {
        "prettier": "^2.7.1"
    }
}
